<%= form_for @enquiry, method: :put, url: wizard_path do |f| %>

    <% if f.object.errors.any? %>
        <div class="error_messages">
          <% f.object.errors.full_messages.each do |error| %>
              <p><%= error %></p>
          <% end %>
        </div>
    <% end %>

    <fieldset>
      <legend>Informatie</legend>

      <div>
        <%= f.label :reference %>
        <%= f.text_field :reference, disabled: true %>
      </div>

    </fieldset>
<br>
