<%= form_for @enquiry, method: :put, url: wizard_path do |f| %>
  <% if f.object.errors.any? %>
    <div class="error_messages">
      <% f.object.errors.full_messages.each do |error| %>
        <p><%= error %></p>
      <% end %>
    </div>
  <% end %>

  <fieldset>
    <legend>Enquiry </legend>

    <div>
      <%= f.label :amount %>
      <br />
      <%= f.text_area :amount, rows: 10 %>
    </div>

    <div>
      <%= f.label :date%>
      <%= f.text_field :date %>
    </div>

    <div>
      <%= f.label :time%>
      <%= f.text_field :time %>
    </div>

    <div>
      <%= f.submit 'Next Step' %>
    </div>
  </fieldset>
<% end %>
